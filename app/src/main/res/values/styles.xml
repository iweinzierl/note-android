<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Viewport">
        <item name="android:background">@color/grey</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.Drawer">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.DrawerList">
        <item name="android:background">@color/drawer_background</item>
        <item name="android:listSelector">@drawable/drawer_selection</item>
    </style>

    <style name="AppTheme.DrawerList.Heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="AppTheme.DrawerItem">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.ActionBarFooter">
        <item name="android:background">@color/background_material_dark</item>
    </style>

    <style name="AppTheme.ActionBarFooter.Item">
        <item name="android:background">@drawable/footer_action_item</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextEdit">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextButton">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoteList">
        <item name="android:dividerHeight">5dp</item>
        <item name="android:divider">@color/grey</item>
    </style>

    <style name="AppTheme.NoteList.Item">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="AppTheme.NoteList.Item.Description">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.NoteList.Item.Creation">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
